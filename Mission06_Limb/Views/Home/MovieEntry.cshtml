@model Entry

<h1>Movie Entry Page</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Director" class="control-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseYear" class="control-label">Release Year</label>
        <input asp-for="ReleaseYear" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input asp-for="Genre" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select a rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited" class="control-label">Edited</label>
        <select asp-for="Edited" class="form-control">
            <option value="">Choose an option</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LentTo" class="control-label">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label">Notes (max 25 chars)</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>